{
  "name": "@lpgera/ts-env",
  "version": "1.2.8",
  "description": "An environment variable reader for TypeScript",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "require": "./dist/cjs/index.js"
    }
  },
  "main": "./dist/cjs/index.js",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "prettier": "^3.7.4",
    "pretty-quick": "^4.2.2",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "fix-cjs": "node -e \"require('fs').writeFileSync('./dist/cjs/package.json', '{\\\"type\\\": \\\"commonjs\\\"}')\"",
    "prepare": "rm -rf dist && tsc && tsc -p tsconfig.cjs.json && npm run fix-cjs",
    "prepublishOnly": "npm run test",
    "postversion": "git push && git push --tags",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watchAll"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lpgera/ts-env.git"
  },
  "keywords": [
    "typescript",
    "env",
    ".env",
    "environment",
    "variables"
  ],
  "author": "lpgera",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lpgera/ts-env/issues"
  },
  "homepage": "https://github.com/lpgera/ts-env#readme",
  "files": [
    "dist"
  ],
  "volta": {
    "node": "24.12.0"
  }
}
